      .navbar
        .navbar-inner.navbar-fixed-top
          %h1.brand
            %a{ :href => '/' }
              Secret Santa Claus App

      .container-fluid
        = yield

  = javascript_include_tag 'application'
  = render 'shared/google_analytics'


