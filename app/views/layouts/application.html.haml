    %meta{ :name => 'viewport', :content => 'initial-scale=1.0' }
    %meta{ :name => "viewport", :content => "width=device-width, user-scalable=no" }
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
